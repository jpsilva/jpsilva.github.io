// out: ../../styles/site.css

*
  box-sizing border-box

body
  margin 0
  background white
  font-family Source Sans Pro, Tahoma, Arial, sans
  font-size (22/16)em
  font-weight 300
  color #222
  overflow-x hidden

a
  font-weight 600
  color inherit

  &:hover
    color #2957a3

.brand-link
  text-decoration none

h2
  margin 0
  text-align center
  font-size 2em
  font-weight 300

// layout

header
  padding-top 50px
  background #f45858
  text-align center
  color #fff

.header--superscribe
  padding-bottom 1em
  background #b1e3f1

footer
section
  &::before
    content ''
    display block
    position absolute
    top -40px
    right 0
    height 0
    width 0
    border-top solid 20px transparent
    border-left solid 50vw transparent
    border-right solid 50vw transparent
    border-bottom solid 20px transparent

footer
  position relative
  padding 1em 0
  background #cc4a4a
  text-align center
  color #fff

  &::before
    border-right-color #cc4a4a
    border-bottom-color #cc4a4a

section
  position relative
  padding 50px 0
  box-shadow 0 0 100px rgba(black .2)

.content
  width 900px
  max-width 100vw
  margin 0 auto
  padding 0 1em

// components

.site-title
  display inline-block
  margin 0 auto 1ex
  padding 10px 22px
  border solid 2px #fff
  font-size 2em
  font-weight 600

.site-summary
  margin 1em 0 50px

.nav-link
  display inline-block
  width 150px
  min-height 50px
  text-decoration none

.product--alt-fight
  padding-top 70px
  padding-bottom 0
  background-color #ffdf00
  background-image linear-gradient(to bottom right, #e8c03c, #ffdf00 10%, #f5c832 20%, #f5c832 80%, #ffdf00 90%, #e8c03c)
  box-shadow none

  &::before
    top 0
    border-top-color #f45858
    border-left-color #f45858

.product--drawstring
  padding-bottom 0
  background #e4f1f1
  box-shadow none

.product--genome
  background #eee

  &::before
    border-right-color #eee
    border-bottom-color #eee

.product--slm-autocompile
  background #fff

  &::before
    border-right-color #fff
    border-bottom-color #fff

.product--seconds
  background #64297a
  color white

.product--summer
  padding-bottom 0
  background #ffeb86

  &::before
    border-right-color #ffeb86
    border-bottom-color #ffeb86

.product--superscribe
  padding-bottom 0
  background #b1e3f1

  &::before
    border-right-color #b1e3f1
    border-bottom-color #b1e3f1

.product-icon
  display block
  margin 0 auto 1em

.product-summary
  text-align center

.product-summary
  margin-top 0
  font-weight 300

.product-links
  text-align center

.product-link
  display inline-block
  margin 1ex 1em
  text-decoration none
  vertical-align top

  > small
    display block

.social-link
  display inline-block
  margin 1em 1em

.alt-fight-screenshot
  display block
  width 700px
  max-width 100%
  margin 0 auto

.drawstring-screenshot
  display block
  width 410px
  max-width 100%
  margin 0 auto

.summer-screenshot
  display block
  width 400px
  max-width 100%
  margin 0 auto

.superscribe-screenshot
  display block
  width 1050px
  max-width 100%
  margin 0 auto

.contact
  padding-top 20px
  background #f45858
  text-align center
  color #fff

  &::before
    border-right-color #f45858
    border-bottom-color #f45858

@import './superscript-preview.styl'
@import './portfolio.styl'
