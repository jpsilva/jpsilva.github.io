// base

body
  margin 0
  background white
  font-family Source Sans Pro, Tahoma, Arial, sans
  font-size (22/16)em
  font-weight 300
  color #222

// layout

.content
  max-width 900px
  margin 0 auto
  padding 0 1em

// components

.site-title
  margin 1em 0 1ex
  text-align center
  font-size 2em

.site-summary
  margin 1em 0 50px
  text-align center

.product
  padding 50px 0

.product--drawstring
  background #FFEAC5

.product--genome
  background #fff

.product--seconds
  background #64297a
  color white

.product--summer
  background #b5e9fb

.product--superscript
  padding-bottom 0
  background #FAF9F7

.product-icon
  display block
  margin 0 auto 1em

.product-title
.product-summary
.product-links
  text-align center

.product-title
  margin 0
  font-size 2em
  font-weight 300

.product-summary
  margin-top 0
  font-weight 300

.product-links
  margin-top 2em

.product-link
  margin 0 1em

.product-screenshot
  display block
  width calc(100% + 150px)
  max-width 1050px
  margin 0 -75px
