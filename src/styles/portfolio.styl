// main: site.styl

.portfolio-section
  background-color #444
  background-image linear-gradient(-3deg, #555, #444)
  color #fff

  &::before
    border-right-color #444
    border-bottom-color #444

  &:first-of-type
    box-shadow none

    &::before
      top 0
      border-top-color #f45858
      border-left-color #f45858
      border-right-color transparent
      border-bottom-color transparent

.portfolio-screenshot
  width 100%
  border-radius 3px

.portfolio-screenshot--half
  width 48%
  margin-right 4%
  vertical-align top
  border-radius 3px

  & + &
    margin-right 0

.portfolio-screenshot--two-thirds
  width 70%
  vertical-align top
  border-radius 3px

.portfolio-screenshot--one-third
  width 28%
  margin-left 2%
  vertical-align top
  border-radius 3px

.center-image
  display block
  max-width 100%
  margin auto

.rounded-image
  border-radius 3px
